<h1>Books</h1>
<table>
    <thead>
      <tr>
        <th>Title</th>

        <th>Body</th>

        <th colspan="3"></th>

      </tr>
    </thead>

</table>
<% @books.each do |book| %>
  <table>
    <span><%= book.title %></span>
    <span><%= book.body %></span>
    <span><%= link_to 'Show', "/books/#{book.id}" %></span>
    <span><%= link_to 'Edit', "/books/#{book.id}/edit" %></span>
    <span><%= link_to 'Destroy', destroy_book_path(@book.id), method: :delete, "deta-confirm" => "本当に削除しますか？" %></span>
  </table>
  <% end %>

<h2>New book</h2>
<%= form_with model: @book do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>

  <%= f.submit "Create Book" %>

<% end %>
